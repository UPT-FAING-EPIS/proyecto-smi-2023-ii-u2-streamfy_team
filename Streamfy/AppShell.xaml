<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Streamfy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Streamfy"
    FlyoutBackgroundColor="Black"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:Dashboard}"
        Route="Dashboard" />

    <FlyoutItem Title="Home" Icon="home.svg">
        <ShellContent
        ContentTemplate="{DataTemplate local:Dashboard}"
        Route="Dashboard" />
    </FlyoutItem>
    <FlyoutItem Title="Reproduccion reciente" Icon="recently.svg">
        <ShellContent
        ContentTemplate="{DataTemplate local:Dashboard}"
        Route="Dashboard" />
    </FlyoutItem>
    <FlyoutItem Title="PlayList" Icon="playlist.svg">
        <ShellContent
        ContentTemplate="{DataTemplate local:Dashboard}"
        Route="Dashboard" />
    </FlyoutItem>
    <FlyoutItem Title="Cerrar Sesion" Icon="logout.svg">
        <ShellContent
        ContentTemplate="{DataTemplate local:Dashboard}"
        Route="Dashboard" />
    </FlyoutItem>

</Shell>
